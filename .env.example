# Server Configuration
AUTH_SERVER_ADDRESS=:8080
AUTH_SERVER_PORT=8080
AUTH_SERVER_APP_URL=http://localhost:3000

# Database Configuration
AUTH_DATABASE_HOST=localhost
AUTH_DATABASE_PORT=5432
AUTH_DATABASE_USER=postgres
AUTH_DATABASE_PASSWORD=postgres
AUTH_DATABASE_DBNAME=auth_db
AUTH_DATABASE_SSLMODE=disable
AUTH_DATABASE_MAX_CONNS=25
AUTH_DATABASE_MAX_IDLE=5

# JWT Configuration (REQUIRED - Generate secure random strings)
AUTH_JWT_ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-this
AUTH_JWT_REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this
AUTH_JWT_ACCESS_TOKEN_EXPIRY=15m
AUTH_JWT_REFRESH_TOKEN_EXPIRY=168h
AUTH_JWT_ISSUER=auth-service

# OAuth Configuration - Google
AUTH_OAUTH_GOOGLE_CLIENT_ID=
AUTH_OAUTH_GOOGLE_CLIENT_SECRET=
AUTH_OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# OAuth Configuration - GitHub
AUTH_OAUTH_GITHUB_CLIENT_ID=
AUTH_OAUTH_GITHUB_CLIENT_SECRET=
AUTH_OAUTH_GITHUB_REDIRECT_URL=http://localhost:8080/auth/github/callback

# OAuth Configuration - Facebook
AUTH_OAUTH_FACEBOOK_CLIENT_ID=
AUTH_OAUTH_FACEBOOK_CLIENT_SECRET=
AUTH_OAUTH_FACEBOOK_REDIRECT_URL=http://localhost:8080/auth/facebook/callback

# OAuth Configuration - Apple
AUTH_OAUTH_APPLE_CLIENT_ID=
AUTH_OAUTH_APPLE_CLIENT_SECRET=
AUTH_OAUTH_APPLE_REDIRECT_URL=http://localhost:8080/auth/apple/callback

# OAuth Configuration - Microsoft
AUTH_OAUTH_MICROSOFT_CLIENT_ID=
AUTH_OAUTH_MICROSOFT_CLIENT_SECRET=
AUTH_OAUTH_MICROSOFT_REDIRECT_URL=http://localhost:8080/auth/microsoft/callback

# OAuth Configuration - Discord
AUTH_OAUTH_DISCORD_CLIENT_ID=
AUTH_OAUTH_DISCORD_CLIENT_SECRET=
AUTH_OAUTH_DISCORD_REDIRECT_URL=http://localhost:8080/auth/discord/callback

# Email Configuration
# Options: smtp, sendgrid, ses
AUTH_EMAIL_PROVIDER=smtp
AUTH_EMAIL_FROM_EMAIL=noreply@example.com
AUTH_EMAIL_FROM_NAME=Auth Service

# For SMTP provider
AUTH_EMAIL_SMTP_HOST=
AUTH_EMAIL_SMTP_PORT=587
AUTH_EMAIL_SMTP_USER=
AUTH_EMAIL_SMTP_PASS=

# For SendGrid or SES provider
AUTH_EMAIL_API_KEY=

# Cache Configuration (for stateless horizontal scaling)
# Options: none (stateless), memory (single instance only), redis (Valkey/Redis for horizontal scaling)
AUTH_CACHE_TYPE=none
AUTH_CACHE_ENABLED=false
AUTH_CACHE_TTL_SECONDS=300
AUTH_CACHE_MAX_SIZE=10000
AUTH_CACHE_CLEANUP_MINUTES=10

# Redis/Valkey Configuration (when AUTH_CACHE_TYPE=redis)
AUTH_CACHE_REDIS_ADDRESS=localhost:6379
AUTH_CACHE_REDIS_PASSWORD=
AUTH_CACHE_REDIS_DB=0
AUTH_CACHE_REDIS_TTL_SECONDS=300
